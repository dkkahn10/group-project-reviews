<h1> Location </h1>
<ul>
  <li><%= @location.name_of_location %></li>
  <li><%= @location.description %></li>
<ul>

<div class="button">
  <%= link_to "Add a Review", new_location_review_path(@location)%>
</div>

<div class="button">
  <%= link_to "Edit Location", edit_location_path(@location)%>
</div>

<h2>Reviews</h2>
<% @reviews.each do |review| %>
  <%= review.intimacy_rating %>
  <%= review.reasoning %>

  <div class="total-votes">
    Total Votes:
    <% sum = 0 %>
    <% review.votes.each do |value| %>
      <% sum += value %>
    <% end %>
    <%= sum %>
  </div>

  <div class="thumbs-up-button">
    <%= button_to "Thumbs Up", upvote_review_votes_path(review), remote: true, method: :post%>
  </div>
  <div class="thumbs-down-button">
    <%= button_to "Thumbs Down", downvote_review_votes_path(review), remote: true, method: :post%>
  </div>

  <div>
    <% if review.user == current_user %>
      <%= button_to "Edit Review", edit_location_review_path(@location, review) %>
    <% end %>
  </div>

<% end %>
