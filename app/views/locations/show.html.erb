<h1> Location </h1>
<ul>
  <li><%= @location.name_of_location %></li>
  <li><%= @location.description %></li>
<ul>

<div class="button">
  <%= link_to "Add a Review", new_location_review_path(@location)%>
</div>

<div class="button">
  <%= link_to "Edit Location", edit_location_path(@location)%>
</div>

<h2>Reviews</h2>
<% @reviews.each do |review| %>
  <%= review.intimacy_rating %>
  <%= review.reasoning %>

  <%= form_for(@vote, :remote => true) do |f| %>
    <%= f.hidden_field "review_id", :value => review.id %>
    <%= f.hidden_field "vote", :value => 0 %>
    <%= submit_tag "Thumbs Up", :class => 'up-vote' %>
  <% end %>

  <%= form_for(@vote, :remote => true) do |f| %>
    <%= f.hidden_field "review_id", :value => review.id %>
    <%= f.hidden_field "vote", :value => 0 %>
    <%= submit_tag "Thumbs Down", :class => 'down-vote' %>
  <% end %>

  <div class="vote_buttons">
    <% if user_signed_in? %>
      <%= button_to "Thumbs Up" %>
      <%= button_to "Thumbs Down" %>
    <% end %>
  </div>

  <div>
      <% if review.user == current_user %>
        <%= button_to "Edit Review", edit_location_review_path(@location, review) %>
      <% end %>
  </div>

<% end %>
